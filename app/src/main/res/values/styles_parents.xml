<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- light theme -->
    <style name="Prototype.Theme.StreamShare.Light" parent="@style/Theme.MaterialComponents.Light">

        <!-- colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryLight</item>

        <!-- Used by action buttons (toolbar, navigationDrawer) -->
        <item name="colorControl">@color/colorControl</item>

        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorAccentLight">@color/colorAccentLight</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorDecorator">@color/colorDecorator</item>
        <item name="colorIcon">@color/colorAccent</item>
        <item name="colorButton">@color/colorAccent</item>
        <item name="colorButtonRipple">?attr/colorControlHighlight</item>
        <item name="statusBarColor">@android:color/transparent</item>

        <!-- Text color on accent color -->
        <item name="colorTextAccent">@color/colorTextAccent</item>

        <!-- Text color on primary color -->
        <item name="colorTextPrimary">@color/colorTextPrimary</item>

        <item name="textStyleTitle">@style/TextAppearance.Title</item>

        <!-- Toolbar styling -->
        <item name="toolbarTheme">@style/Widget.StreamShare.Toolbar</item>
        <item name="popupTheme">@style/ThemeOverlay.MaterialComponents.Light</item>

        <item name="borderlessButtonStyle">@style/Widget.StreamShare.ButtonStyle.TextButton</item>

        <item name="dialogTheme">@style/Widget.StreamShare.DialogTheme</item>
        <item name="alertDialogTheme">@style/Widget.StreamShare.DialogTheme</item>
        <item name="roundSelector">@drawable/round_selector</item>
        <item name="roundProgressBar">@drawable/round_progress_bar</item>
        <item name="roundProgressBarShape">@drawable/round_progress_bar_shape</item>
        <item name="floatingActionButtonStyle">@style/Widget.StreamShare.FloatingActionButtonStyle</item>
        <item name="materialButtonStyle">@style/Widget.StreamShare.ButtonStyle</item>
        <item name="buttonStyle">@style/Widget.StreamShare.ButtonStyle</item>
        <item name="textAppearanceButton">@style/TextAppearance.Button</item>
        <item name="rippleSelector">@drawable/ripple_selector</item>
        <item name="android:windowBackground">@color/windowBackground</item>

        <item name="dialogBackground">@drawable/dialog_background</item>
    </style>

    <!-- Note: use this to change properties for different android versions -->
    <style name="Base.Theme.StreamShare.Light" parent="Prototype.Theme.StreamShare.Light"/>

    <style name="Base.Theme.StreamShare.Light.NoActionBar" parent="Base.Theme.StreamShare.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Dark theme -->
    <style name="Prototype.Theme.StreamShare.Dark" parent="Theme.MaterialComponents">
        <item name="dialogTheme">@style/Widget.StreamShare.DialogTheme</item>
        <item name="alertDialogTheme">@style/Widget.StreamShare.DialogTheme</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="roundSelector">@drawable/round_selector</item>
        <item name="roundProgressBar">@drawable/round_progress_bar</item>
        <item name="roundProgressBarShape">@drawable/round_progress_bar_shape</item>
        <item name="floatingActionButtonStyle">@style/Widget.StreamShare.FloatingActionButtonStyle</item>
        <item name="materialButtonStyle">@style/Widget.StreamShare.ButtonStyle</item>
        <item name="buttonStyle">@style/Widget.StreamShare.ButtonStyle</item>
        <item name="textAppearanceButton">@style/TextAppearance.Button</item>
        <item name="borderlessButtonStyle">@style/Widget.StreamShare.ButtonStyle.TextButton</item>
        <item name="rippleSelector">@drawable/ripple_selector</item>
        <item name="android:windowBackground">@color/windowBackground</item>

        <item name="colorControlNormal">@android:color/white</item>
        <item name="dialogBackground">@drawable/dialog_background_dark</item>
    </style>

    <!-- Note: use this to change properties for different android versions -->
    <style name="Base.Theme.StreamShare.Dark" parent="Prototype.Theme.StreamShare.Dark"/>

    <style name="Base.Theme.StreamShare.Dark.NoActionBar" parent="Base.Theme.StreamShare.Dark">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



</resources>