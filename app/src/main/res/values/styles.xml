<resources>

    <!--
    ===========================================================================
    Note: if you want to change some properties for different android version,
    then inherit style from Prototype.Theme.StreamShare.Light.

    Example:

      <style name="Base.Theme.StreamShare.Light" parent="Prototype.Theme.StreamShare.Light">
            change properties here
      <style>

      <style name="Theme.StreamShare.Light" parent="Base.Theme.StreamShare.Light"/>

      <style name="Theme.StreamShare.Light.NoActionBar" parent="Theme.StreamShare.Light"/>
    ===========================================================================
    Also see styles_parents.xml
    -->

    <!-- StreamShare light theme -->
    <style name="Theme.StreamShare.Light" parent="Base.Theme.StreamShare.Light"/>

    <style name="Theme.StreamShare.Light.NoActionBar" parent="Base.Theme.StreamShare.Light.NoActionBar"/>

    <!-- StreamShare dark theme -->
    <style name="Theme.StreamShare.Dark" parent="Base.Theme.StreamShare.Dark"/>

    <style name="Theme.StreamShare.Dark.NoActionBar" parent="Base.Theme.StreamShare.Dark.NoActionBar">
        <item name="android:statusBarColor">@color/colorBlackTransparent</item>
        <item name="android:navigationBarColor">@color/colorBlackTransparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>


    <!-- Text styling -->
    <style name="TextAppearance">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Title" parent="@style/TextAppearance">
        <item name="fontStyle">?attr/textAppearanceHeadline5</item>
        <item name="android:textColor">?colorTextPrimary</item>
    </style>

    <style name="TextAppearance.Caption" parent="@style/TextAppearance">
        <item name="fontStyle">?attr/textAppearanceHeadline6</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?colorTextPrimary</item>
    </style>

    <style name="TextAppearance.Primary" parent="@style/TextAppearance">
        <item name="fontStyle">?attr/textAppearanceHeadline5</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:textColor">?colorTextPrimary</item>
    </style>

    <style name="TextAppearance.Primary.AccentBackground" parent="@style/TextAppearance.Primary">
        <item name="android:textColor">?colorTextAccent</item>
    </style>

    <style name="TextAppearance.Secondary">
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.Button" parent="@style/TextAppearance.MaterialComponents.Button">
        <item name="android:textAppearance">?attr/textAppearanceSubtitle2</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <!-- Widget styling -->
    <style name="Widget.StreamShare.ProgressBar.Horizontal.Oval" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">?roundProgressBar</item>
        <item name="android:background">?roundProgressBarShape</item>
    </style>

    <style name="Widget.StreamShare.Toolbar" parent="@style/ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:textColorPrimary">?colorTextPrimary</item>
        <item name="colorControlNormal">?colorControl</item>
    </style>

    <style name="OverflowButton">
        <item name="srcCompat">@drawable/ic_more_vert_24dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:scaleType">center</item>
        <item name="android:background">?roundSelector</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="Widget.StreamShare.FloatingActionButtonStyle" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@android:color/white</item>
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="Widget.StreamShare.ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?colorButton</item>
        <item name="android:textColor">?colorTextAccent</item>
    </style>

    <style name="Widget.StreamShare.ButtonStyle.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:background">@drawable/text_button_background</item>
        <item name="backgroundTint">?colorSurface</item>
        <item name="android:textColor">?colorButton</item>
    </style>

    <style name="Widget.StreamShare.ButtonStyle.Dialog" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="rippleColor">@color/text_button_ripple_color</item>
        <item name="android:textColor">?colorButton</item>
    </style>

    <style name="Widget.StreamShare.DialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowBackground">?dialogBackground</item>
        <item name="buttonBarButtonStyle">@style/Widget.StreamShare.ButtonStyle.Dialog</item>
    </style>

    <!-- Dark theme -->


</resources>
