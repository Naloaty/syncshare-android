<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="@dimen/corner_radius"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/online_device_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="?rippleSelector"
        android:clickable="true">

        <LinearLayout
            android:background="@color/colorBlueLightDarker"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/online_device_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_home_24dp"
                android:tint="@color/colorWhiteBlueTheme"/>


        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="24dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/online_device_nickname"
                style="@style/TextAppearance.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_defaultValue"
                android:textSize="16sp" />

            <!--TextView
                android:id="@+id/online_device_extra_data"
                style="@style/TextAppearance.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_defaultValue"
                android:textSize="16sp" /-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingRight="16dp"
            android:gravity="center">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_navigate_next_24dp"
                android:tint="@color/colorBlueLightDarker"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>